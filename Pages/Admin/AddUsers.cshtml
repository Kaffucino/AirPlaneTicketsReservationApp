@page
@model AvioApp.Pages.Admin.AddUsersModel
@{
    ViewData["Title"] = "Admin page";

}


<div class="text-center form-group row" style="background-color:aliceblue; margin-bottom:100px">
    <div class="offset-3 col-6">
        <h1 class="display-4">Rezervacija avio karata</h1>
    </div>
    <div class="offset-1 col-2">
        <label class="display-7"> Korisnik: @Model.AdminUserName </label>
        <a class="btn btn-primary btn-sm" style="font-size:20px" href="/">Odjavite se</a>
    </div>


</div>

<div class="row text-center" style="background-color:dodgerblue; margin-top:-100px; border:solid">

    <div class="offset-2 col-4">
        <label class="display-6">  <a style="color:black; text-decoration-line:none" href="/Admin?username=@Model.AdminUserName">Avionski letovi</a> </label>
        
    </div>

    <div class="col-4">
        <label class="display-6" style="font-weight:bold; color:white"> Unos novih korisnika </label>
    </div>

</div>


<br/>

<div class="row text-center">
    <div class="col-12">

        <h1 class="display-5" style="color:royalblue; font-weight:500;">Novi korisnik</h1>

    </div>
</div>

@if (Model.error_message.Length > 0)
{
                        <div class="alert alert-warning alert-dismissable fade show" role="alert">

                            <strong>
            @Model.error_message
                            </strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" arial-label="Zatvori"></button>
                        </div>
}

<br/>



<div class="container border" style="padding:50px; background-color:aliceblue">



    <form method="post">
        <div class="form-group row">




            <div class="offset-1 col-3">

                <label style="font-size:25px">Korisničko ime: </label>
            </div>
            <div class="offset-1 col-5">
                <input type="text" name="NewUsername" value="@Model.NewUsername" class="form-control" />
            </div>

         
        </div>

        <div class="form-group row" style="margin-top:20px">

            <div class=" offset-1 col-3">

                <label style="font-size:25px">Šifra: </label>
            </div>
            <div class=" offset-1 col-5">
                <input type="password" name="Password" value="@Model.Password" class="form-control" />
            </div>
        </div>

        <div class="form-group row" style="margin-top:20px">

            <div class=" offset-1 col-3">

                <label style="font-size:25px">Ponovite šifru: </label>
            </div>
            <div class=" offset-1 col-5">
                <input type="password" name="PasswordRepeat" value="@Model.PasswordRepeat" class="form-control" />
            </div>
        </div>

        <div class="form-group row" style="margin-top:20px">

            <div class=" offset-1 col-8">


                <label style="font-size:25px;margin-right:10px">Tip korisnika: </label>

                <input class="form-check-input" style="margin-top:15px" type="radio"name="Type" value="agent" /> 
                <label class="form-check-label" style="font-size:25px; margin-right:10px">Agent</label>


                <input class="form-check-input" style="margin-top:15px"   type="radio" name="Type" value="posetilac" /> 
                <label class="form-check-label" style="font-size:25px">Posetilac</label>

            </div>

        </div>


        <div class="row text-center" style="margin-top:40px">
            <div class="offset-3 col-9">
                <button type="submit" class="btn btn-primary btn-sm" style="font-size:30px">Dodajte korisnika</button>
            </div>

        </div>


    </form>
</div>


@if (Model.success_message.Length > 0)
    {
        <div class="row mb-3">

            <div class="col-sm-9">

                <div class="alert alert-success alert-dismissable fade show " role="alert">
                    <strong>@Model.success_message</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" arial-label="Close"></button>
                </div>

            </div>

        </div>
    }


